from SCons.Environment import *

Import("target_env")
target_env: Environment
sources = [
    target_env.File("Heimdall/AssertionHandler.cpp"),
    target_env.File("Heimdall/ConsoleReporter.cpp"),
    target_env.File("Heimdall/Engine.cpp"),
    target_env.File("Heimdall/JUnitReporter.cpp"),
    target_env.File("Heimdall/TestTracker.cpp"),
    target_env.File("UnitTest/hre/HRE.cpp"),
    target_env.File("UnitTest/hre/HString.cpp"),
    target_env.File("UnitTest/hre/JUnitTestList.cpp"),
    target_env.File("UnitTest/hre/JUnitTestSuiteList.cpp"),
    target_env.File("UnitTest/hre/OptionList.cpp"),
    target_env.File("UnitTest/hre/ReporterRegistry.cpp"),
    target_env.File("UnitTest/hre/TestList.cpp"),
    target_env.File("UnitTest/hre/TestTracker.cpp"),
    target_env.File("UnitTest/Runner.cpp"),
]
Heimdall = target_env.StaticLibrary("Heimdall.o", target_env.Object(sources))
Export("Heimdall")
